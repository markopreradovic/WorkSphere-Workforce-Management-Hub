@if (ShowDetailsPage)
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <div class="card dark-detail-card">
                    <div class="card-header dark-detail-header">
                        <i class="bi bi-person-badge"></i> @EmployeeDetails.Name Details
                    </div>
                    <div class="card-body dark-detail-body">
                        <div class="hstack gap-2">
                            <div class="vstack gap3 employee-profile">
                                <img src="@EmployeeDetails.Photo" class="profile-image" />
                                <table class="table dark-table">
                                    <tbody>
                                        <tr>
                                            <td><h6 class="fw-bold label-text"><i class="bi bi-person-fill"></i> Name:</h6></td>
                                            <td class="value-text">@EmployeeDetails.Name</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold label-text"><i class="bi bi-briefcase-fill"></i> Job Title:</h6></td>
                                            <td class="value-text">@EmployeeDetails.JobName</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold label-text"><i class="bi bi-telephone-fill"></i> Telephone:</h6></td>
                                            <td class="value-text">@EmployeeDetails.TelephoneNumber</td>
                                        </tr>
                                        <tr>
                                            <td><h6 class="fw-bold label-text"><i class="bi bi-house-fill"></i> Address:</h6></td>
                                            <td class="value-text">@EmployeeDetails.Address</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <table class="table dark-table department-table">
                                <tbody>
                                    <tr>
                                        <td colspan="2" class="text-center section-header">
                                            <h6 class="fw-bold"><i class="bi bi-building"></i> Department Information</h6>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><h6 class="fw-bold label-text">General Department:</h6></td>
                                        <td class="value-text">@EmployeeDetails!.Branch!.Department!.GeneralDepartment!.Name</td>
                                    </tr>
                                    <tr>
                                        <td><h6 class="fw-bold label-text">Department:</h6></td>
                                        <td class="value-text">@EmployeeDetails.Branch.Department?.Name</td>
                                    </tr>
                                    <tr>
                                        <td><h6 class="fw-bold label-text">Branch:</h6></td>
                                        <td class="value-text">@EmployeeDetails.Branch?.Name</td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table dark-table location-table">
                                <tbody>
                                    <tr>
                                        <td colspan="2" class="text-center section-header">
                                            <h6 class="fw-bold"><i class="bi bi-geo-alt-fill"></i> Location Information</h6>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><h6 class="fw-bold label-text">Country:</h6></td>
                                        <td class="value-text">@EmployeeDetails.Town.City.Country.Name</td>
                                    </tr>
                                    <tr>
                                        <td><h6 class="fw-bold label-text">City:</h6></td>
                                        <td class="value-text">@EmployeeDetails.Town.City.Name</td>
                                    </tr>
                                    <tr>
                                        <td><h6 class="fw-bold label-text">Town:</h6></td>
                                        <td class="value-text">@EmployeeDetails.Town.Name</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer dark-detail-footer">
                        <button class="btn btn-close-detail" @onclick="DetailsPageCloseBtnClicked">
                            <i class="bi bi-x-circle"></i> Close
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    /* Dark Detail Card */
    .dark-detail-card {
        background: linear-gradient(145deg, #16213e 0%, #1a1a2e 100%);
        border: 2px solid rgba(233, 69, 96, 0.4);
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.6);
        overflow: hidden;
        animation: slideInDetail 0.6s ease-out;
    }

    .dark-detail-header {
        background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);
        border-bottom: 3px solid #e94560;
        padding: 1.5rem;
        color: #ff6b81;
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
    }

        .dark-detail-header i {
            margin-right: 0.5rem;
            filter: drop-shadow(0 0 5px rgba(233, 69, 96, 0.6));
        }

    .dark-detail-body {
        background: #1a1a2e;
        padding: 2.5rem;
    }

    .dark-detail-footer {
        background: linear-gradient(135deg, #16213e 0%, #0f3460 100%);
        border-top: 3px solid #e94560;
        padding: 1.5rem;
        text-align: center;
    }

    /* Employee Profile Section */
    .employee-profile {
        animation: fadeInLeft 0.8s ease-out;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        border: 4px solid #e94560;
        box-shadow: 0 8px 25px rgba(233, 69, 96, 0.5);
        transition: all 0.4s ease;
        margin: 0 auto 1rem;
    }

        .profile-image:hover {
            transform: scale(1.1) rotate(5deg);
            border-color: #ff6b81;
            box-shadow: 0 12px 35px rgba(233, 69, 96, 0.7);
        }

    /* Dark Tables */
    .dark-table {
        background: rgba(15, 52, 96, 0.3);
        border: 2px solid rgba(233, 69, 96, 0.3);
        border-radius: 12px;
        overflow: hidden;
        margin-top: 1rem;
    }

        .dark-table tbody tr {
            border-bottom: 1px solid rgba(233, 69, 96, 0.2);
            transition: all 0.3s ease;
        }

            .dark-table tbody tr:hover {
                background: rgba(233, 69, 96, 0.15);
                transform: translateX(5px);
            }

            .dark-table tbody tr:last-child {
                border-bottom: none;
            }

        .dark-table td {
            padding: 1rem;
            color: #e0e0e0;
            border: none;
        }

    /* Section Headers */
    .section-header {
        background: linear-gradient(135deg, rgba(233, 69, 96, 0.2) 0%, rgba(255, 107, 129, 0.2) 100%);
        padding: 1rem !important;
        border-radius: 8px;
        margin-bottom: 0.5rem;
    }

        .section-header h6 {
            color: #ff6b81;
            margin: 0;
            font-size: 1.1rem;
        }

        .section-header i {
            margin-right: 0.5rem;
            filter: drop-shadow(0 0 3px rgba(233, 69, 96, 0.6));
        }

    /* Labels and Values */
    .label-text {
        color: #ff6b81;
        margin: 0;
        font-size: 0.95rem;
    }

        .label-text i {
            margin-right: 0.5rem;
            font-size: 0.9rem;
        }

    .value-text {
        color: #e0e0e0;
        font-weight: 500;
    }

    /* Table Animations */
    .department-table {
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .location-table {
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    /* Close Button */
    .btn-close-detail {
        background: linear-gradient(135deg, #e94560 0%, #ff6b81 100%);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(233, 69, 96, 0.4);
    }

        .btn-close-detail:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(233, 69, 96, 0.6);
            background: linear-gradient(135deg, #ff6b81 0%, #e94560 100%);
        }

        .btn-close-detail:active {
            transform: translateY(0);
        }

        .btn-close-detail i {
            margin-right: 0.5rem;
        }

    /* Animations */
    @@keyframes slideInDetail {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @@keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .hstack {
            flex-direction: column !important;
        }

        .dark-table {
            width: 100%;
            margin-bottom: 1.5rem;
        }
    }
</style>

@code {
    [Parameter] public bool ShowDetailsPage { get; set; }
    [Parameter] public Employee EmployeeDetails { get; set; } = new();
    [Parameter] public EventCallback HandleDetailsPageCloseBtnClicked { get; set; } = new();

    async Task DetailsPageCloseBtnClicked() => await HandleDetailsPageCloseBtnClicked.InvokeAsync();
}
