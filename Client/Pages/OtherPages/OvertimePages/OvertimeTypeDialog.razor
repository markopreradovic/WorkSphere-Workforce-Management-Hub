<SfDialog Width="350px"
          IsModal="true"
          ShowCloseIcon="true"
          @bind-Visible="IsVisible">
    <DialogTemplates>
        <Header>@Title Overtime Type</Header>
        <Content>
            <div class="card border-success">
                <div class="card-body">
                    <div class="form-group">
                        <label class="form-label">Name</label>
                        <InputText @bind-Value="OvertimeType.Name"
                                   class="form-control" />
                    </div>
                </div>
            </div>
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="SAVE"
                      Type="ButtonType.Button"
                      IsPrimary="true"
                      OnClick="Save" />
    </DialogButtons>
</SfDialog>

@code {
    [Parameter]
    public OvertimeType OvertimeType { get; set; } = new();

    [Parameter]
    public EventCallback<OvertimeType> HandleSaveOperationEvent { get; set; }

    private bool IsVisible { get; set; } = false;
    public string Title { get; set; } = "Add";

    public void OpenDialog()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void CloseDialog()
    {
        IsVisible = false;
        StateHasChanged();
    }

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(OvertimeType.Name))
        {
            await dialogService.AlertAsync(
                "You need to provide OvertimeType name.",
                "Alert!"
            );
            return;
        }

        await HandleSaveOperationEvent.InvokeAsync(OvertimeType);
    }

    public void ChangeTitle(string title)
    {
        Title = title;
    }
}