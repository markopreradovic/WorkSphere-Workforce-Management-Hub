<SfDialog Width="350px" IsModal="true" ShowCloseIcon="true" @bind-Visible="IsVisible">
    <DialogTemplates>
        <Header>@Title Employee's Sanction</Header>
        <Content>
            <div class="card border-success">
                <div class="card-body">
                    <div class="form-group mb-2">
                        <label class="form-label">Employee ID</label>
                        <InputNumber @bind-Value="ItemModel.EmployeeId" class="form-control" />
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Occurring Date</label>
                        <InputDate @bind-Value="ItemModel.Date" class="form-control" />
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Punishment Date</label>
                        <InputDate @bind-Value="ItemModel.PunishmentDate" class="form-control" />
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Punishment</label>
                        <InputTextArea @bind-Value="ItemModel.Punishment" class="form-control" />
                    </div>
                    <div class="form-group mb-2">
                        <label class="form-label">Sanction Type</label>
                        <SfDropDownList TValue="int" TItem="SanctionType"
                                        @bind-Value="ItemModel.SanctionTypeId"
                                        DataSource="SanctionTypes"
                                        Placeholder="Select Type">
                            <DropDownListFieldSettings Value="Id" Text="Name"></DropDownListFieldSettings>
                        </SfDropDownList>
                    </div>
                </div>
            </div>
        </Content>
    </DialogTemplates>

    <DialogButtons>
        <DialogButton Content="SAVE" Type="ButtonType.Button" IsPrimary="true" OnClick="Save" />
        <DialogButton Content="CANCEL" Type="ButtonType.Button" IsPrimary="false" OnClick="CloseDialog" />
    </DialogButtons>
</SfDialog>

@code {
    [Parameter] public Sanction ItemModel { get; set; } = new();
    [Parameter] public List<SanctionType> SanctionTypes { get; set; } = new();
    [Parameter] public EventCallback<Sanction> HandleSaveOperationEvent { get; set; }

    private bool IsVisible { get; set; } = false;
    public string Title { get; set; } = "Add";

    public void OpenDialog()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void CloseDialog()
    {
        IsVisible = false;
        StateHasChanged();
    }

    public void ChangeTitle(string title) => Title = title;

    private async Task Save()
    {
        if (ItemModel.EmployeeId <= 0)
        {
            await dialogService.AlertAsync("Please provide Employee ID.", "Alert!");
            return;
        }
        if (ItemModel.SanctionTypeId <= 0)
        {
            await dialogService.AlertAsync("Please select a sanction type.", "Alert!");
            return;
        }

        await HandleSaveOperationEvent.InvokeAsync(ItemModel);
        CloseDialog();
    }
}
